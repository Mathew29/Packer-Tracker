<h1>To Do List Item Details: </h1>

<h2>@Model.GetDescription()</h2>
<h2>@Model.GetPacked()</h2>

<form action="/items/@Model.GetId()" method="post">
@if(Model.GetPacked() == false)
{
  <button type="submit" name="button">Pack This</button>
}else
{
  <button type="submit" name="button">Unpack This</button>
}
</form>
<a href='/items/new'>Add another item</a>
<a href='/items'>View all items</a>
